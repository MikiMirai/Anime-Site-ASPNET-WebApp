@using ASPNET_WebApp.Core.Models
@model RoleEditViewModel
@{
    ViewData["Title"] = "Roles Management";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="container">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.Id" />
            <input type="hidden" name="Name" value="@Model.UserName" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating text-white">
                <h3>User: @Html.DisplayFor(m => m.UserName)</h3>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label class="text-white">User Roles</label>
                    <select asp-for="RoleNames" asp-items="@items" class="form-control">
                       
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>