@using ASPNET_WebApp.Core.Models
@model AnimeCreateViewModel
@{
	ViewData["Title"] = "Create Anime";
	var genres = (List<SelectListItem>)ViewBag.Genres;
}

<div class="card card-outline card-primary">
	<div class="card-body">
		<form id="createAnimeForm" method="post">
			<h2>Create a new anime.</h2>
			<hr />
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@*<div class="form-group">
				<label asp-for="Image" style="width: 100%;"></label>
				<input type="file"
					   accept=".png,.jpg,.jpeg,.gif,.tif"
					   asp-for="Image"
					   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
					   onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>*@
			<div class="form-group">
				<label asp-for="Aired"></label>
				<input asp-for="Aired" class="form-control" />
				<span asp-validation-for="Aired" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Episodes"></label>
				<input asp-for="Episodes" class="form-control" />
				<span asp-validation-for="Episodes" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status"></label>
				<input asp-for="Status" class="form-control" />
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Studios"></label>
				<input asp-for="Studios" class="form-control" />
				<span asp-validation-for="Studios" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Producers"></label>
				<input asp-for="Producers" class="form-control" />
				<span asp-validation-for="Producers" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="text-white">Select genres</label>
				<select asp-for="Genres" asp-items="@genres" class="form-control text-black">
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Duration"></label>
				<input asp-for="Duration" class="form-control" />
				<span asp-validation-for="Duration" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Rating"></label>
				<input asp-for="Rating" class="form-control" />
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
			<br />
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}