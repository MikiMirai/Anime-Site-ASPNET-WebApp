@using ASPNET_WebApp.Core.Models
@model AnimeEditViewModel
@{
	ViewData["Title"] = "Anime Edit";
	var genres = (List<SelectListItem>)ViewBag.Genres;
}

<div class="row">
	<div class="col-4 text-white">
		<form id="edit" enctype="multipart/form-data" method="post">
			<input type="hidden" name="Id" value="@Model.AnimeId" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" aria-required="true" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Image" style="width: 100%;"></label>
				<input type="file"
					   accept=".png,.jpg,.jpeg,.gif,.tif"
					   asp-for="Image"
					   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
					   onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Aired" class="form-label"></label>
				<input asp-for="Aired" class="form-control" aria-required="true" />
				<span asp-validation-for="Aired" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Episodes" class="form-label"></label>
				<input asp-for="Episodes" class="form-control" aria-required="true" />
				<span asp-validation-for="Episodes" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Status" class="form-label"></label>
				<input asp-for="Status" class="form-control" aria-required="true" />
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Description" class="form-label"></label>
				<input asp-for="Description" class="form-control" aria-required="true" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Studios" class="form-label"></label>
				<input asp-for="Studios" class="form-control" aria-required="true" />
				<span asp-validation-for="Studios" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Producers" class="form-label"></label>
				<input asp-for="Producers" class="form-control" aria-required="true" />
				<span asp-validation-for="Producers" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="text-white">Select genres</label>
				<select asp-for="Genres" asp-items="@genres" class="form-control text-black">
				</select>
			</div>
			<div class="form-floating">
				<label asp-for="Duration" class="form-label"></label>
				<input asp-for="Duration" class="form-control" aria-required="true" />
				<span asp-validation-for="Duration" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<label asp-for="Rating" class="form-label"></label>
				<input asp-for="Rating" class="form-control" aria-required="true" />
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
			<div class="row">&nbsp;</div>
			<div class="row">
				<div class="col-4">
					<button id="edit-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
				</div>
				<!-- /.col -->
			</div>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}