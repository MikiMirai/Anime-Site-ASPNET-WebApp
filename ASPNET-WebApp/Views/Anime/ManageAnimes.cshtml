@using ASPNET_WebApp.Core.Models
@model IEnumerable<AnimeListViewModel>
@{
}

<div class="row">
	<div class="col-12">
		<div class="text-white">
			<div class="card-header">
				<h3 class="card-title">Application Animes</h3>
				<div class="card-tools row">
					<div class="col-lg-4">
						<button type="button" class="nav-link btn btn-primary btn-block">
							<a asp-area="" asp-controller="Anime" asp-action="Create">Create Anime</a>
						</button>
					</div>
				</div>
			</div>

			<div class="card-body table-responsive p-0">
				<table class="text-white table text-nowrap">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Aired</th>
							<th>Episodes</th>
							<th>Status</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var anime in Model)
						{
							<tr>
								<td>
									@if (@anime.Image != null)
									{
										<img style="width: 50px; height: 50px;" src="@anime.Image">
									}
								</td>
								<td>@anime.Name</td>
								<td>@anime.Aired</td>
								<td>@anime.Episodes</td>
								<td>@anime.Status</td>
								<td>
									<a asp-area="" asp-action="Edit" asp-controller="Anime" asp-route-id="@anime.Id" class="btn btn-block btn-outline-info btn-xs">Edit</a>
									<a asp-area="" asp-action="EditGenre" asp-controller="Anime" asp-route-id="@anime.Id" class="btn btn-block btn-outline-warning btn-xs">Genres</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>