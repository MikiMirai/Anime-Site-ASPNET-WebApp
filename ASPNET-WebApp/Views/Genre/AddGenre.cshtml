@using ASPNET_WebApp.Core.Models
@model GenreCreateViewModel
@{
	ViewData["Title"] = "Create a genre";
}

<div class="text-white card-outline card-primary">
	<div class="card-body">
		<div class="col-md-4">
			<form id="genreCreate" method="post">
				<h2>Create a new genre.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" aria-required="true" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<button id="genreCreate" type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
