@using ASPNET_WebApp.Infrastructure.Data
@model IEnumerable<Genre>
@{
}

<div class="row">
	<div class="col-12">
		<div class="text-white">
			<div class="card-header">
				<h3 class="card-title">Application Genres</h3>
				<div class="card-tools">
					<div align="center" style="width: 25%;">
						<button type="button" class="nav-link btn btn-primary btn-block text-white">
							<a asp-area="" asp-controller="Genre" asp-action="AddGenre">Create Genre</a>
						</button>
					</div>
				</div>
			</div>

			<div class="card-body table-responsive p-0">
				<table class="text-white table text-nowrap">
					<thead>
						<tr>
							<th>Name</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var genre in Model)
						{
							<tr>
								<td>@genre.Name</td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td>
									<a asp-area="" asp-action="Edit" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-block btn-outline-info btn-xs">Edit</a>
									@*<a asp-area="" asp-action="delete" asp-controller="anime" asp-route-id="@anime.Id" class="btn btn-block btn-outline-warning btn-xs">Delete</a>*@
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>